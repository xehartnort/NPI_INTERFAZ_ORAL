<!DOCTYPE vxml PUBLIC "-//W3C//DTD VOICEXML 2.1//EN" "http://www.w3.org/TR/voicexml21/vxml.dtd">
<vxml version="2.1">
    <!--
        Aquí están definidas las variables globales
    -->
    <var name="main_lang" expr="'es'"/>
    <var name="quote_type" expr="''"/>

    <catch event="ayuda">
        <goto next="#help"/>
    </catch>
    <form id="help">
        <block>
            <if cond="main_lang=='es'">
                <prompt bargein="false">
                    Para volver al menu principal di: menu o salir.
                </prompt>
            <else/>
                <prompt bargein="false">
                    To return to the main menu say: menu or exit.
                </prompt>
                <goto next="menu_en.vxml"/>
            </if>
        </block>
    </form>

    <catch event="salir">
        <goto next="#salida"/>
    </catch>
    <form id="salida">
        <block>
            <if cond="main_lang=='es'">
                <prompt>
                        Volviendo al menu principal.
                </prompt>
                <goto next="menu_es.vxml"/>
            <else/>
                <prompt>
                        Returning to the main menu.
                </prompt>
                <goto next="menu_en.vxml"/>
            </if>
        </block>
    </form>

</vxml>